<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerdeApka.Pages.StronaDaily"
             BackgroundColor="{StaticResource ZoltyFerdkowy}">
    <StackLayout>
        <Label Text="Cytat na dziś" FontFamily="FontRegularny" FontAttributes="Bold"  HorizontalOptions="Center" FontSize="56" Margin="0,10,0,0" TextColor="Black"/>
        <Label Text="Czemu panu zawsze się chce kiedy mnie sie chce?" x:Name="LabelCytatDnia" HorizontalOptions="Center" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" FontSize="20" Margin="30,20,30,10" TextColor="Black"/>
        <Frame BackgroundColor="{StaticResource NiebieskiFerdkowy}" CornerRadius="10" HeightRequest="15" Margin="20,20,20,0" Padding="0" HorizontalOptions="FillAndExpand" />
        <Label Text="Mem na dziś" FontFamily="FontRegularny" FontAttributes="Bold"  HorizontalOptions="Center" FontSize="56" Margin="0,20,0,0" TextColor="Black"/>
        <Image x:Name="MemDnia" Source="source" HeightRequest="400" Margin="10"/>
    </StackLayout>
</ContentPage>