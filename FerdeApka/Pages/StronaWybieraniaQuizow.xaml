<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerdeApka.Pages.StronaWybieraniaQuizow"
             BackgroundColor="{StaticResource ZoltyFerdkowy}"
             Title="Wybierz quiz!">

    <StackLayout>
        <StackLayout Orientation="Horizontal" VerticalOptions="Start" Padding="5,15,5,15">
            <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Start">
                <Label Text="Quiz o postaciach" FontSize="18"/>
                <Label Text="Poziom: trudny" TextColor="Gray" FontSize="15"/>
            </StackLayout>
            <Button Text="Rozpocznij" Clicked="PrzejdzDoStronyzQuziemOPostaciach"/>
        </StackLayout>


        <StackLayout Orientation="Horizontal" VerticalOptions="Start" Padding="5,15,5,15">
            <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Start">
                <Label Text="Quiz o autorach" FontSize="18"/>
                <Label Text="Poziom: trudny" TextColor="Gray" FontSize="15"/>
            </StackLayout>
            <Button Text="Rozpocznij" Clicked="PrzejdzDoStronyzQuziemOAutorach"/>
        </StackLayout>

    </StackLayout>
</ContentPage>