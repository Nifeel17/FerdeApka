<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerdeApka.Pages.StronaWybieraniaQuizow"
             BackgroundColor="{StaticResource ZoltyFerdkowy}"
             Title="Wybierz quiz!">
    
    <ListView x:Name="listaQuizow" HasUnevenRows="true">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="5,15,5,15">
                        <StackLayout HorizontalOptions="StartAndExpand">
                            <Label Text="{Binding Tytul}" FontSize="18"/>
                            <Label Text="{Binding ShortTitle}" TextColor="Gray" FontSize="15"/>
                        </StackLayout>
                        <Button Text="Rozpocznij"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>