<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerdeApka.Pages.PodsumowanieQuizu"
             BackgroundColor="{StaticResource ZoltyFerdkowy}"
             NavigationPage.HasNavigationBar="False"  
             NavigationPage.BackButtonTitle="">
    <StackLayout>
        <Label Text="Ukonczono quiz!" x:Name="LabelUkonczonoQuiz" LineBreakMode="WordWrap" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontSize="36" Margin="0,40,0,30"/>
        <Frame BackgroundColor="{StaticResource NiebieskiFerdkowy}" CornerRadius="10" HeightRequest="15" Margin="20,20,20,30" HorizontalOptions="FillAndExpand" />
        <Label Text="Wynik:" Margin="0,20,0,30" x:Name="LabelWynik" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontSize="36"/>
        <Label Text="Gratulacje!" Margin="0,20,0,30" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontSize="36"/>
        <Button x:Name="ButtonPowrotu" Clicked="PowrotDoStronyQuizow" Text="Powrot do quizow" BackgroundColor="{StaticResource RozowyFerdkowy}" WidthRequest="150" Margin="0,30,0,0"/>
    </StackLayout>
</ContentPage>