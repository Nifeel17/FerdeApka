<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="FerdeApka.Pages.Popuppages.PopupKasynoNagrody"
             CanBeDismissedByTappingOutsideOfPopup="False"
            Size="300, 250"
            Color="{StaticResource ZoltyFerdkowy}">
    <StackLayout>
        <Label Text="Twoja nagroda:" HorizontalOptions="Center" FontSize="20" FontFamily="FontRegularny"/>
        <Label x:Name="LosowanaNagroda" FontSize="24" Text="" HorizontalOptions="Center"/>
        <Label x:Name="DzwiekNagroda" FontSize="16" Text="" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" HorizontalOptions="Center"/>
        <Button Text="Zamknij" x:Name="buttonZamknijPopup" IsEnabled="False" Clicked="ZamknijPopup" HorizontalOptions="Center" TextColor="white" FontSize="22" CornerRadius="20" Margin="40, 50, 40, 0" HeightRequest="70" BackgroundColor="{StaticResource RozowyFerdkowy}"/>
    </StackLayout>
</mct:Popup>