<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="FerdeApka.Pages.Popuppages.PopupInformacjaLogowanie"
             CanBeDismissedByTappingOutsideOfPopup="True"
             Size="300, 200"
             Color="{StaticResource ZoltyFerdkowy}">
    <StackLayout>
        <Label Text="Logowanie z kontem"
               VerticalOptions="Center" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"
               FontSize="24"/>
        <Label Text="Wpisz swoją nazwę i hasło" 
               VerticalOptions="Center"
               HorizontalOptions="Center" 
               FontSize="18"/>
        <Label Text="Nic trudnego!" 
               VerticalOptions="Center"
               HorizontalOptions="Center" 
               FontSize="15"/>
        <Button Clicked="Zamknij_Popup_Logowania" 
                Text="Rozumiem!" 
                TextColor="White" 
                VerticalOptions="Center"
                HorizontalOptions="Center" 
                FontSize="24"  
                BackgroundColor="{StaticResource RozowyFerdkowy}" 
                Margin="20" 
                HeightRequest="70" 
                CornerRadius="20"/>
    </StackLayout>
</mct:Popup>