<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerdeApka.Pages.StronaMemow"
             BackgroundColor="{StaticResource ZoltyFerdkowy}">
    <ScrollView BackgroundColor="{StaticResource ZoltyFerdkowy}">
        <StackLayout x:Name="GlownyStackLayout">
            <Label Text="FerdeMemy" FontAttributes="Bold"  HorizontalOptions="Center" FontSize="48" Margin="0" TextColor="Black"/>
            <Frame BackgroundColor="{StaticResource NiebieskiFerdkowy}" CornerRadius="10" HeightRequest="15" Margin="20,30,20,10" Padding="0" HorizontalOptions="FillAndExpand" />
            <Button x:Name="ButtonNastepneMemy" Text="Pokaz więcej" Clicked="NastepneMemy" TextColor="white" FontSize="22" CornerRadius="20" Margin="40, 50, 40, 50" HeightRequest="70" BackgroundColor="{StaticResource RozowyFerdkowy}"/>

            <Label Text="Memy się skończyły!" IsVisible="false" x:Name="MemySieSkonczylyLabel" HorizontalOptions="Center" FontSize="24" Margin="0,10,0,30" TextColor="Black"/>
        </StackLayout>
    </ScrollView>
</ContentPage>